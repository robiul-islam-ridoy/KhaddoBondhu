<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!-- Food Image Collage -->
        <com.example.khaddobondhu.ui.view.ImageCollageView
            android:id="@+id/imageCollageView"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"/>

        <!-- Content Container -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Title and Price Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/titleTextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Food Title"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:maxLines="2"
                    android:ellipsize="end" />

                <TextView
                    android:id="@+id/priceTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Free"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/design_default_color_primary"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="4dp"
                    android:layout_marginStart="8dp" />

            </LinearLayout>

            <!-- Post Type Badge -->
            <TextView
                android:id="@+id/postTypeTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DONATE"
                android:textSize="12sp"
                android:textColor="@android:color/white"
                android:background="@drawable/bg_post_type"
                android:paddingHorizontal="8dp"
                android:paddingVertical="2dp"
                android:layout_marginTop="4dp" />

            <!-- Seller Name and Role Badge Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="8dp">


                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/profile_picture_background">

                    <ImageView
                        android:id="@+id/profilePictureImageView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_person"
                        android:scaleType="centerCrop"
                        android:padding="2dp" />
                </FrameLayout>

                <TextView
                    android:id="@+id/sellerNameTextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Seller Name"
                    android:paddingLeft="10dp"
                    android:textSize="16sp"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    android:maxLines="1"
                    android:ellipsize="end" />

                <com.example.khaddobondhu.ui.view.UserTypeBadgeView
                    android:id="@+id/userRoleBadgeView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp" />

            </LinearLayout>

            <!-- Description -->
            <TextView
                android:id="@+id/descriptionTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Food description goes here..."
                android:textSize="14sp"
                android:textColor="@android:color/darker_gray"
                android:maxLines="2"
                android:ellipsize="end"
                android:layout_marginTop="8dp" />

            <!-- Quantity and Time Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="8dp">

                <TextView
                    android:id="@+id/quantityTextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="â€¢ 4 servings"
                    android:textSize="12sp"
                    android:textColor="@android:color/darker_gray"
                    android:drawableStart="@drawable/ic_time"
                    android:drawablePadding="4dp" />

                <TextView
                    android:id="@+id/timeLeftTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2 hours ago"
                    android:textSize="12sp"
                    android:textColor="@android:color/darker_gray" />

            </LinearLayout>

            <!-- Location -->
            <TextView
                android:id="@+id/distanceTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dhaka, Bangladesh"
                android:textSize="12sp"
                android:textColor="@android:color/darker_gray"
                android:drawableStart="@drawable/ic_location"
                android:drawablePadding="4dp"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginTop="4dp" />

            <!-- Expiry Info -->
            <TextView
                android:id="@+id/expiryTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Expires: 2 days left"
                android:layout_weight="1"
                android:textSize="12dp"
                android:layout_gravity="center_vertical"
                android:drawableStart="@drawable/ic_expired"
                android:drawablePadding="4dp"
                android:textColor="@android:color/holo_red_dark"
                android:layout_marginTop="4dp"
                android:visibility="visible"/>
        </LinearLayout>

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>